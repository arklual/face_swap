# Database
DATABASE_URL=postgresql+psycopg://user:password@db/dbname

# S3 Storage (compatible with Yandex Object Storage, VK Cloud, etc.)
AWS_ENDPOINT_URL=https://storage.yandexcloud.net
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION_NAME=ru-central1
S3_BUCKET_NAME=magicloomio

# Celery/Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# HuggingFace / Models
HF_HOME=/models/hf
QWEN_MODEL_ID=Qwen/Qwen2-VL-2B-Instruct

# ComfyUI
# Note: With dual-instance setup, COMFY_BASE_URL is set per-worker in docker-compose.yml:
# - celery_gpu_prepay_worker uses COMFY_BASE_URL=http://comfyui_prepay:8188
# - celery_gpu_postpay_worker uses COMFY_BASE_URL=http://comfyui_postpay:8188
# For local development without Docker, you can use a single instance:
COMFY_BASE_URL=http://127.0.0.1:8188

# JWT Authentication
JWT_SECRET_KEY=your-very-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

